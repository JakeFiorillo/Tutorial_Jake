// room script file

function hHotspot1_UseInv(Hotspot *theHotspot, CursorMode mode)
{
  if (cEgo.ActiveInventory == iBucket)
  {
    Display("You need something to have a better grip on the bucket");
  }
  if (cEgo.ActiveInventory == iWaterBucket)
  {
    cEgo.Walk(165, 135, eBlock, eWalkableAreas);
    cEgo.FaceDirection(eDirectionUp);
    Display("You fill the bucket with water");
    player.LoseInventory(iWaterBucket);
    player.AddInventory(iFullWaterBucket);
  }
  else
  {
    Display("I probably shouldn't waste the water");
  }
  
}

function oHandle_Look(Object *theObject, CursorMode mode)
{
  Display("That looks like some piece of metal");
}

function oHandle_Interact(Object *theObject, CursorMode mode)
{
  cEgo.Walk(15, 150, eBlock, eWalkableAreas);
  cEgo.FaceDirection(eDirectionDown);
  oHandle.Visible=false;
  Display("You picked up the handle");
  cEgo.AddInventory(iHandle);  
}
